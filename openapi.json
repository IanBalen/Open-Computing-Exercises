{
  "openapi": "3.0.3",
  "info": {
    "title": "Player Management Service",
    "description": "API for managing players and teams",
    "version": "1.0.0",
    "license": {
      "name": "Creative Commons Zero v1.0 Universal",
      "url": "https://creativecommons.org/publicdomain/zero/1.0/"
    }
  },
  "paths": {
    "/player": {
      "get": {
        "summary": "List all players",
        "description": "Returns a list of players, optionally filtered",
        "parameters": [
          {
            "name": "searchText",
            "in": "query",
            "description": "Text to search for",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "attribute",
            "in": "query",
            "description": "Attribute to filter by",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of players",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PlayerTeamDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter"
          }
        }
      },
      "post": {
        "summary": "Add a new player",
        "description": "Creates a new player with the provided data",
        "requestBody": {
          "description": "Player data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddPlayerDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player added"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/player/team": {
      "get": {
        "summary": "List all teams",
        "description": "Returns a list of teams",
        "responses": {
          "200": {
            "description": "List of teams",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TeamDTO"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/player/{id}": {
      "get": {
        "summary": "Get a player by ID",
        "description": "Returns a single player",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the player",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerTeamDTO"
                }
              }
            }
          },
          "404": {
            "description": "Player not found"
          }
        }
      },
      "put": {
        "summary": "Update a player",
        "description": "Updates the data of an existing player",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the player to update",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "Updated player data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddPlayerDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player updated"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Player not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a player",
        "description": "Deletes a player by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the player to delete",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player deleted"
          },
          "404": {
            "description": "Player not found"
          }
        }
      }
    },
    "/download/json": {
      "get": {
        "summary": "Download players data in JSON format",
        "description": "Provides the list of players in JSON file format",
        "parameters": [
          {
            "name": "searchText",
            "in": "query",
            "description": "Text to search for in players data",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "attribute",
            "in": "query",
            "description": "Attribute to filter by in players data",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JSON file containing players data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter"
          }
        }
      }
    },
    "/download/csv": {
      "get": {
        "summary": "Download players data in CSV format",
        "description": "Provides the list of players in CSV file format",
        "parameters": [
          {
            "name": "searchText",
            "in": "query",
            "description": "Text to search for in players data",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "attribute",
            "in": "query",
            "description": "Attribute to filter by in players data",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "CSV file containing players data",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PlayerTeamDTO": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "position": { "type": "string" },
          "dateOfBirth": { "type": "string", "format": "date" },
          "height": { "type": "integer" },
          "weight": { "type": "integer" },
          "jerseyNumber": { "type": "integer" },
          "pointsPerGame": { "type": "number", "format": "double" },
          "name": { "type": "string" },
          "city": { "type": "string" },
          "wins": { "type": "integer" },
          "losses": { "type": "integer" }
        }
      },
      "AddPlayerDTO": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "position": { "type": "string" },
          "dateOfBirth": { "type": "string", "format": "date" },
          "height": { "type": "integer" },
          "weight": { "type": "integer" },
          "jerseyNumber": { "type": "integer" },
          "pointsPerGame": { "type": "number", "format": "double" },
          "teamId": { "type": "string" }
        }
      },
      "TeamDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "city": { "type": "string" },
          "wins": { "type": "integer" },
          "losses": { "type": "integer" }
        }
      }
    }
  }
}  
